
{
  "manifest_version": 3,
  "name": "RunBiteFit Shopping Assistant",
  "version": "1.0.0",
  "description": "Automatically add shopping list items to Migros and Coop",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://www.migros.ch/*",
    "https://www.coop.ch/*",
    "https://*.lovable.app/*",
    "https://preview--run-bite-balance.lovable.app/*",
    "http://localhost:*/*",
    "https://localhost:*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.migros.ch/*", "https://www.coop.ch/*"],
      "js": ["content.js"],
      "type": "module"
    },
    {
      "matches": [
        "https://*.lovable.app/*", 
        "https://preview--run-bite-balance.lovable.app/*",
        "http://localhost:*/*",
        "https://localhost:*/*"
      ],
      "js": ["app-bridge.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Shopping Assistant"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "injected.js",
        "modules/QuantityParser.js",
        "modules/MigrosAutomation.js", 
        "modules/ShoppingAutomation.js"
      ],
      "matches": [
        "https://www.migros.ch/*", 
        "https://www.coop.ch/*",
        "https://*.lovable.app/*",
        "https://preview--run-bite-balance.lovable.app/*",
        "http://localhost:*/*",
        "https://localhost:*/*"
      ]
    }
  ]
}
